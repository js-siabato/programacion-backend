<div class="container mb-5">
  <h2 class="center">Agregar producto nuevo</h2>
  <form
    class="row g-3 justify-content-evenly"
    id="productonuevo"
    name="productonuevo"
    autocomplete="off"
    action="/api/productos"
    method="POST"
  >
    <div class="col-md-6">
      <label class="form-label" for="title">Nombre del producto</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      />
    </div>
    <div class="col-md-6">
      <label class="form-label" for="price">Precio</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="price"
        required
      />
    </div>
    <div class="col-md-6">
      <label class="form-label" for="thumbnail">URL de la foto</label>
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        name="thumbnail"
        required
      />
    </div>
    <input class="btn btn-primary" type="submit" value="Agregar producto" />
  </form>
</div>

<div class="container mb-5">
  <h2 class="center h__md">Productos disponibles</h2>
  {{#if list}}
  <div class="table-responsive">
      <table class="table table-sm table-hover table-striped">
          <thead class="t-head-light">
              <tr class="p__md--strong center">
                  <th>Nombre</th>
                  <th>Precio</th>
                  <th>Foto</th>
              </tr>
          </thead>
          <tbody class="center">
              {{#each list}}
              <tr>
                  <td>
                      {{this.title}}
                  </td>
                  <td>
                      $ {{this.price}}
                  </td>
                  <td>
                      <img src="{{this.thumbnail}}" width="50" height="50">
                  </td>
              </tr>
              {{/each}}
          </tbody>
      </table>
  </div>
  {{else}}
  <h3 class="alert alert-danger">No se encontraron productos</h1>
      {{/if}}
</div>