head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='description' content='')
  meta(name='author' content='Nube Colectiva')
  title Home | Mi Proyecto
  // Archivo CSS Bootstrap 5
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
  // Favicon
  link(rel='icon' href='https://nubecolectiva.com/favicon.ico')
.container.mb-5
  // Header
  header.d-flex.flex-wrap.py-3.mb-5.border-bottom
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/') Mi Proyecto
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(aria-current='page' href='/api/productos/ver') Ver productos
            li.nav-item
              a.nav-link(aria-current='page' href='/api/productos/agregar') Agregar productos
main
  .container.mb-5
    h2.center.h__md Productos disponibles
      #vertabla
      if list
        .table-responsive
          table.table.table-sm.table-hover.table-striped
            thead.t-head-light
              tr.p__md--strong.center
                th Nombre
                th Precio
                th Foto
            tbody.center
            for producto in list
              tr
                td=producto.title
                td=producto.price
                td
                  img(src=producto.thumbnail width='50' height='50')
      else
        h2.center.h__md.alert.alert-danger No hay productos disponibles
